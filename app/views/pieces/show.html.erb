<h1 class="text-center">Infinite Loops Chess</h1>
<div class="col-10 center offset-1">
  <table id="chessboard">
    <tbody>
      <% [8, 7, 6, 5, 4, 3, 2, 1].each do |row| %>
        <tr>
        <% (1..8).each do |col| %>
          <td
            ' '
            id=
            <% if @piece == Piece.get_piece_at_coor(col, row) %>
            'selected_square'
            <% else %>
              <%="#{col}#{row}"%>
            <% end %>
            ' '
            <% if (col + row).odd? %>
              class="white"
            <% else %>
              class="black"
            <% end %>
          >
            <% piece_image = @piece.game.render_piece(col, row) %>
            <% if @piece == Piece.get_piece_at_coor(col, row) %>
              <%= piece_image %>
            <% else %>
              <%= piece_image %>
              <%= link_to "Move Here", piece_path(@piece.id, x_position: col, y_position: row), method: :put %>
            <% end %>
          </td>       
        <% end %>
        </tr> 
      <% end %>
    </tbody>
  </table>
</div>
